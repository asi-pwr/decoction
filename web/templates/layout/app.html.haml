!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(name="description" content="")
    %meta(name="author" content="")

    %title Hello Decoction!
    %link(rel="stylesheet" href='#{static_path(@conn, "/css/app.css")}')

  %body
    .container
      .header
        %ol.breadcrumb.text-right
          - if @current_user do
            %li= @current_user.email
            %li= link "Log out", to: logout_path(@conn, :delete), method: "delete"
          - else
            %li= link "Register", to: user_path(@conn, :new)
            %li= link "Log in", to: login_path(@conn, :new)

      %p.alert.alert-info(role="alert")= get_flash(@conn, :info)
      %p.alert.alert-danger(role="alert")= get_flash(@conn, :error)

      %main(role="main")
        = render @view_module, @view_template, assigns

    %script(src='#{static_path(@conn, "/js/app.js")}')
